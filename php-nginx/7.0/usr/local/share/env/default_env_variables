#!/bin/bash

export PHP_TIMEZONE=${PHP_TIMEZONE:-UTC}
export PHP_MEMORY_LIMIT=${PHP_MEMORY_LIMIT:-256M}
export APP_USER=${APP_USER:-www-data}
export APP_GROUP=${APP_GROUP:-www-data}
export APP_USER_LOCAL=${APP_USER_LOCAL:-false}
export START_NGINX=${START_NGINX:-true}
export START_PHP_FPM=${START_PHP_FPM:-true}

export WORK_DIRECTORY=${WORK_DIRECTORY:-/app}

export BASIC_AUTH_ENABLED=${BASIC_AUTH_ENABLED:-}
export BASIC_AUTH_REALM=${BASIC_AUTH_REALM:-Protected System}
export BASIC_AUTH_FILE=${BASIC_AUTH_FILE:-/etc/nginx/htpasswd}
export BASIC_AUTH_REMOTE_URL=${BASIC_AUTH_REMOTE_URL:-}
export BASIC_AUTH_HTPASSWD=${BASIC_AUTH_HTPASSWD:-}
